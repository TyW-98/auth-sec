<%- include('partials/header') %>

<div class="post-page container-fluid">
  <form method="post" action="/post">
    <div class="mb-3">
      <label for="recipeTitle" class="form-label">Recipe Name</label>
      <input
        type="text"
        class="form-control"
        name="recipeTitle"
        id="recipeTitle"
      />
    </div>
    <div class="mb-3">
      <label for="recipeInstruction" class="form-label">Instructions</label>
      <textarea
        class="form-control"
        name="recipeInstruction"
        id="recipeInstructions"
        rows="5"
        cols="80"
      ></textarea>
    </div>
    <h5>Ingredient List</h5>
    <ul id="ingredient-list" name="IngredientList"></ul>
    <label for="ingredient-input" class="form-label">Ingredients</label>
    <input
      type="text"
      class="form-control"
      name="ingredientInput"
      id="ingredient-input"
    />
    <button type="button" class="btn btn-dark add-ingredient" name="addIngredient">Add</button>
    <button type="submit" class="btn btn-dark submit-post" name="submitPost">Post</button>
  </form>
</div>

<script src="/script/post.js"></script>

<%- include('partials/footer') %>
